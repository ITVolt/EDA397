<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorPrimaryDark" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:textColor="@color/small_text"
        android:text="@string/week"
        android:id="@+id/weekTV" />

    <TextView
        android:id="@+id/weekNbrTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@color/small_text"
        tools:text="XX"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/weekTV" />

    <TextView
        android:id="@+id/weekYearTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/small_text"
        tools:text="year"
        android:layout_below="@+id/weekTV"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/weekTotalTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/weekNbrTV"
        android:text="@string/total"
        android:textColor="@color/small_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/weekTag1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Tag 1"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        android:layout_below="@+id/weekTotalTV"
        android:layout_alignStart="@+id/weekTotalTV" />

    <TextView
        android:id="@+id/weekTag2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        tools:text="Tag 2"
        android:layout_below="@+id/weekTag1TV"
        android:layout_alignStart="@+id/weekTag1TV" />

    <TextView
        android:id="@+id/weekTagOthersTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weekTag2TV"
        android:layout_below="@+id/weekTag2TV"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        tools:text="Others" />

    <TextView
        android:id="@+id/weekTotalTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        tools:text="time"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/weekTotalTV" />

    <TextView
        android:id="@+id/weekTag1TimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weekTotalTimeTV"
        tools:text="time"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        android:layout_below="@+id/weekTotalTimeTV"
        android:layout_toEndOf="@+id/weekTotalTV" />

    <TextView
        android:id="@+id/weekTag2TimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weekTotalTimeTV"
        tools:text="time"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        android:layout_below="@+id/weekTag1TimeTV"
        android:layout_toEndOf="@+id/weekTotalTV" />

    <TextView
        android:id="@+id/weekTagOthersTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weekTotalTimeTV"
        android:layout_below="@+id/weekTag2TimeTV"
        android:layout_toEndOf="@+id/weekTotalTV"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        tools:text="time" />

    <ImageView
        android:id="@+id/weekGraphImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/ic_menu_report_image"
        android:layout_toEndOf="@+id/weekTotalTimeTV"
        tools:ignore="ContentDescription" />

</RelativeLayout>