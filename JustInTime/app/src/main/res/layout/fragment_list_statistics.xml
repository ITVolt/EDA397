<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.chalmers.justintime.fragments.StatisticsFragment"
    android:background="#ffffff"> <!--3d455b-->

    <TextView
        android:id="@+id/timerInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timerInfoSwitch"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Switch
        android:id="@+id/timerInfoSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Timer Information"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Switch
        android:id="@+id/appInfoSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timerInfoText"
        android:text="App Information"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/appInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appInfoSwitch"
        android:textSize="18sp"
        android:textStyle="italic" />


</RelativeLayout>




