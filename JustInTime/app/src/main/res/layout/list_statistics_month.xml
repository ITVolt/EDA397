<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorPrimaryDark" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/small_text"
        android:text="@string/month"
        android:id="@+id/monthTV"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@+id/monthTotalTV"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/monthYearTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/small_text"
        tools:text="Year"
        android:layout_below="@+id/monthTV"
        android:layout_alignStart="@+id/monthTV"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/monthTotalTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="7dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/monthTV" />

    <TextView
        android:id="@+id/monthTag1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Tag 1"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        android:layout_below="@+id/monthTotalTV"
        android:layout_alignStart="@+id/monthTotalTV" />

    <TextView
        android:id="@+id/monthTag2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        tools:text="Tag 2"
        android:layout_below="@+id/monthTag1TV"
        android:layout_alignStart="@+id/monthTag1TV" />

    <TextView
        android:id="@+id/monthTagOthersTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/monthTag2TV"
        android:layout_below="@+id/monthTag2TV"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        tools:text="Others" />

    <TextView
        android:id="@+id/monthTotalTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Time"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        android:layout_marginStart="50dp"
        android:layout_above="@+id/monthTag1TV"
        android:layout_toEndOf="@+id/monthTagOthersTV" />

    <TextView
        android:id="@+id/monthTag1TimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/monthTotalTimeTV"
        tools:text="Time"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        android:layout_below="@+id/monthTotalTimeTV"
        android:layout_toEndOf="@+id/monthTotalTV" />

    <TextView
        android:id="@+id/monthTag2TimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/monthTotalTimeTV"
        tools:text="Time"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        android:layout_below="@+id/monthTag1TimeTV"
        android:layout_toEndOf="@+id/monthTotalTV" />

    <TextView
        android:id="@+id/monthTagOthersTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/monthTotalTimeTV"
        android:layout_below="@+id/monthTag2TimeTV"
        android:layout_toEndOf="@+id/monthTotalTV"
        android:textColor="@color/small_text"
        android:textSize="12sp"
        tools:text="Time" />

</RelativeLayout>